#!/bin/bash
# Source https://github.com/cadorn/bash.origin
. "$HOME/.bash.origin"
function init {
	eval BO_SELF_BASH_SOURCE="$BO_READ_SELF_BASH_SOURCE"
	BO_deriveSelfDir ___TMP___ "$BO_SELF_BASH_SOURCE"

	CLI_PATH="$___TMP___/../lib/cli.js"

	function runPlugin {
		local PLUGIN_PATH="$1"
		BO_run_node "$CLI_PATH" --plugin "$PLUGIN_PATH" ${*:2}
	}
}
init $@